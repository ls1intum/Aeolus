{
  "$id": "action.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actionfile",
  "description": "Defines an action that can be used in a windfile",
  "type": "object",
  "required": [
    "api",
    "metadata",
    "steps"
  ],
  "properties": {
    "api": {
      "$ref": "definitions.schema.json#/api"
    },
    "metadata": {
      "$ref": "definitions.schema.json#/metadata"
    },
    "environment": {
      "$ref": "definitions.schema.json#/environment"
    },
    "steps": {
      "title": "Steps",
      "description": "The actions that are executed during a CI job in a target system. When a job is executed, the actions are executed in the order they are defined in the action.",
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9._-]+$": {
          "$ref": "#/$defs/action"
        }
      }
    }
  },
  "$defs": {
    "action": {
      "title": "Action",
      "description": "Action that can be executed.",
      "oneOf": [
        {
          "$ref": "definitions.schema.json#/file-action"
        },
        {
          "$ref": "definitions.schema.json#/internal-action"
        },
        {
          "$ref": "definitions.schema.json#/platform-action"
        }
      ]
    }
  }
}